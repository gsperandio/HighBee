<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    android:gravity="center">

    <ImageButton
        android:id="@+id/returningButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow_left"
        android:layout_gravity="start"
        android:background="@null"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitCenter"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginHorizontal="32dp"
        android:orientation="vertical"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <EditText
                android:id="@+id/numberOne"
                android:inputType="number"
                android:digits="0123456789"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/default_input"
                android:textAlignment="center"
                android:textSize="22sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/numberTwo"
                android:inputType="number"
                android:digits="0123456789"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/default_input"
                android:textAlignment="center"
                android:textSize="22sp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/numberThree"
                android:inputType="number"
                android:digits="0123456789"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/default_input"
                android:textAlignment="center"
                android:textSize="22sp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/numberFour"
                android:inputType="number"
                android:digits="0123456789"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/default_input"
                android:textAlignment="center"
                android:textSize="22sp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/numberFive"
                android:inputType="number"
                android:digits="0123456789"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/default_input"
                android:textAlignment="center"
                android:textSize="22sp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/numberSix"
                android:inputType="number"
                android:digits="0123456789"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/default_input"
                android:textAlignment="center"
                android:textSize="22sp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/resend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/default_button"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/refresh"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinssemibold"
                android:gravity="center_vertical|center_horizontal"
                android:text="Reenviar código"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:drawableTint="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/secondsToRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aguarde 30 segundos para Reenviar o código"
            android:textAlignment="center"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/poppinslight"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Código incorreto"
            android:fontFamily="@font/poppinsitalic"
            android:textColor="@color/red"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:visibility="invisible"
            />
    </LinearLayout>
</LinearLayout>